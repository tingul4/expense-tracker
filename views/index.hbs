<div class="container text-center mx-auto">
  <div class="dropdown my-4">
    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      類別
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="#">家居物業</a></li>
      <li><a class="dropdown-item" href="#">交通出行</a></li>
      <li><a class="dropdown-item" href="#">休閒娛樂</a></li>
      <li><a class="dropdown-item" href="#">餐飲食品</a></li>
      <li><a class="dropdown-item" href="#">其他</a></li>
    </ul>
  </div>
  <div class="d-flex justify-content-center"> 
    <div class="mx-4">總金額: </div>
    <div class="fs-1 text-success">{{ totalAmount }}</div>
  </div>
  <table class="table table-striped my-4">
    {{#each expenses}}
    <tr>
      <td class="d-flex align-items-center">
        <div class="mx-4"><i class="fa-solid fa-utensils fa-xl"></i></div>
        <div>
          <div class="text-start">{{ this.name }}</div>
          <div class="text-start">{{ this.date }}</div>
        </div>
      </td>
      <td class="align-middle">{{ this.amount }}</td>
      <td class="align-middle">
        <a href="/edit" class="btn btn-secondary">修改</a>
        <a href="#" class="btn btn-secondary">刪除</a>
      </td>
    </tr>
    {{/each}}
  </table>
  <a href="/new" class="btn btn-primary">新增支出</a>
</div>