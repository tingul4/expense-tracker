<div class="row">
  <div class="mx-auto col-10 col-md-8 col-lg-3">
    <div class="row my-3 align-items-center">
      <div class="col col-md-4 col-lg-4">*必填欄位</div>
      <div class="col col-md-8 col-lg-8 fs-3">請修改你的支出</div>
    </div>
    <form action="/{{ expense._id }}/edit?_method=PUT" method="POST">
      <div class="row g-3 align-items-center mb-3">
        <div class="col-auto">
          <label for="name" class="col-form-label">名稱*</label>
        </div>
        <div class="col-auto">
          <input name="name" type="text" class="form-control" id="name" value={{ expense.name }} required>
        </div>
      </div>
      <div class="row g-3 align-items-center mb-3">
        <div class="col-auto">
          <label for="date" class="form-label">日期*</label>
        </div>
        <div class="col-auto">
          <input name="date" type="date" class="form-control" id="date" value={{ expense.date }} required>
        </div>
      </div>
      <div class="row g-3 align-items-center mb-3">
        <div class="col-auto">
          <label for="category" class="form-label">類別*</label>
        </div>
        <div class="col-auto">
          <select name="categoryId" id="category" required>
            <option value=1 {{#if isHouse}}selected{{/if}}>家居物業</option>
            <option value=2 {{#if isTraffic}}selected{{/if}}>交通出行</option>
            <option value=3 {{#if isEntertainment}}selected{{/if}}>休閒娛樂</option>
            <option value=4 {{#if isFood}}selected{{/if}}>餐飲食品</option>
            <option value=5 {{#if isOther}}selected{{/if}}>其他</option>
          </select>
        </div>
      </div>
      <div class="row g-3 align-items-center mb-3">
        <div class="col-auto">
          <label for="amount" class="form-label">金額*</label>
        </div>
        <div class="col-auto">
          <input name="amount" type="number" class="form-control" id="amount" value={{ expense.amount }} required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">送出</button>
    </form>
  </div>
</div>